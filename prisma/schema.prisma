generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model TimeLog {
  userId          String   @map("user_id")
  date            DateTime @db.Date
  timeIn          String?  @map("time_in")
  timeOut         String?  @map("time_out")
  remarks         String?
  overrideReason  String?  @map("override_reason")
  tasks           Task[]   @relation("timeLogTasks")
  @@map("time_logs")
  @@id([userId, date])
}

model Task {
  taskId          Int      @map("task_id") @id @default(autoincrement())
  userId          String   @map("user_id")
  date            DateTime @db.Date
  projectName     String   @map("project_name")
  taskName        String   @map("task_name")
  taskDescription String?  @map("task_description")
  hours           Int      @db.SmallInt
  timeLog         TimeLog  @relation("timeLogTasks", fields: [userId, date], references: [userId, date])
  @@map("tasks")
  @@index([userId, date])
}
